<%- include("./partials/header"); -%>

<div class="container">
  <h1 class="homeTitle">Home</h1>
  <p><%= startingContent %></p>
  <% posts.forEach(post => { %>
  <h2><%= post.title %></h2>
  <p>
    <%= (post.content || '').substring(0, 100) + "..." %>
    <a href="/posts/<%=post._id%>">Read More</a>
  </p>
  <% }) %>
</div>

<%- include('./partials/footer'); -%>
